datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// TODO: Author column here

model Workspace {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  icon        String   @default("")
  inTrash     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  emojiLogo   String
  banner      String
  folders     Folder[]
}

model Folder {
  id          Int       @id @default(autoincrement())
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  workspaceId Int
  inTrash     Boolean
  files       File[]
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  folderId  Int
  folder    Folder   @relation(fields: [folderId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  nick      String
  firstName String
  avatarURL String?
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
